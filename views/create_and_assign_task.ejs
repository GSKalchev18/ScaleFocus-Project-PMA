<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/form_style.css">
    <link rel="stylesheet" href="css/users_table.css">
    <title>Create Project</title>
</head>
<body>
    
    <%- include('partials/header') %>

    <h1 class = "UserListLable">Users list</h1>
    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Username</th>
                </tr>
            </thead>
            <tbody>
                <%for(let i = 0; i < UsersList.length; i++) { %>
                    <tr>
                        <td><%=UsersList[i].Id%></td>
                        <td><%=UsersList[i].Username%></td>
                    </tr>
                <%}%>
            </tbody>

        </table>
    </div>
    <h1 class = "UserListLable">Projects list</h1>
    <div class="table-wrapper">
        <table class="fl-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                <%for(let i = 0; i < ProjectsList.length; i++) { %>
                    <tr>
                        <td><%=ProjectsList[i].Id%></td>
                        <td><%=ProjectsList[i].Title%>%></td>
                    </tr>
                <%}%>
            </tbody>

        </table>
    </div>
    
    <div class="login">
        <form name = "registration-form" class="contact-form" method="POST" action="/tasks">
            <h2 class = "UserListLable">Create And Assign Task</h2>
            <input type="text" name="Title" id="Title" placeholder="Title" required>
            <textarea name="Description" placeholder="Description" cols="30" rows="10" required></textarea>
            <input type="number" name="ProjectsId" id="ProjectsId" placeholder="ProjectsId" required>
            <input type="number" name="AssigneeId" id="AssigneeId" placeholder="AssigneeId" required>
            <input class="submit" type="submit" value = "Create and Assing Task">
        </form>
    </div>

</body>
</html>